{
    "version": "1.5.0",
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "outDir": "bin"
    },
    "filesGlob": [
        "typings/tsd.d.ts",
        "client/**/*.ts"
    ],
    "files": [
        "typings/tsd.d.ts",
        "client/bootstrap.ts",
        "client/common/globals.ts",
        "client/components/app.ts",
        "client/components/base/baseView.ts",
        "client/components/controls/chipCollection.ts",
        "client/components/controls/homeTile.ts",
        "client/components/expense.ts",
        "client/components/home.ts",
        "client/components/search.ts",
        "client/models/expenseModel.ts",
        "client/services/configService.ts",
        "client/services/expenseService.ts",
        "client/services/validationService.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
